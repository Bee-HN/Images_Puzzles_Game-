<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hoang_nguyen.courseproject.playPuzzle"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/setImage"
        android:layout_width="369dp"
        android:layout_height="451dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SaveBtn"
        android:layout_width="71dp"
        android:layout_height="49dp"

        android:onClick="SavePuzzle"
        android:text="Save"
        android:layout_marginStart="4dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/CheckBtn"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="4dp"
        tools:layout_editor_absoluteY="462dp" />

    <Button
        android:id="@+id/CheckBtn"
        android:layout_width="71dp"
        android:layout_height="49dp"
        android:onClick="CheckPuzzle"
        android:text="Check"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="78dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="82dp"
        app:layout_constraintRight_toRightOf="@+id/BackBtn"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/setImage"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="78dp"
        android:layout_marginRight="82dp"
        tools:layout_editor_absoluteY="460dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/BackBtn"
        android:layout_width="71dp"
        android:layout_height="49dp"
        android:onClick="BackToHome"
        android:text="Back"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="153dp"
        android:layout_marginEnd="153dp"
        app:layout_constraintRight_toRightOf="@+id/QuitBtn"
        app:layout_constraintBaseline_toBaselineOf="@+id/CheckBtn"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/setImage"
        android:layout_marginLeft="153dp"
        android:layout_marginRight="153dp"
        tools:layout_editor_absoluteY="464dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/ResetBtn"
        android:layout_width="71dp"
        android:layout_height="49dp"
        android:onClick="ResetPuzzle"
        android:text="Reset"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="73dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintRight_toRightOf="@+id/QuitBtn"
        app:layout_constraintBaseline_toBaselineOf="@+id/BackBtn"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/BackBtn"
        android:layout_marginLeft="73dp"
        android:layout_marginRight="80dp"
        tools:layout_editor_absoluteY="463dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/QuitBtn"
        android:layout_width="71dp"
        android:layout_height="49dp"

        android:onClick="QuitPuzzle"
        android:text="Quit"
        android:layout_marginStart="313dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/ResetBtn"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="312dp" />

</android.support.constraint.ConstraintLayout>
