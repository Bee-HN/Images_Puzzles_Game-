<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hoang_nguyen.courseproject.help">

    <Button
        android:id="@+id/AuthorsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Authors"
        android:onClick="Authors"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="131dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/howToBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to Play"
        android:onClick="HowTo"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/AuthorsBtn"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/AuthorsBtn"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/TipsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tip/Tricks"
        android:onClick="TipsAndTricks"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="@+id/howToBtn"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/howToBtn"
        android:layout_marginRight="8dp" />
</android.support.constraint.ConstraintLayout>
